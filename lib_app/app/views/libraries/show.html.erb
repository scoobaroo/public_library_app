<div>
  <h3>Name: <strong><%= @library.name %></strong></h3>
  <h3>Floor Count:<strong> <%= @library.floor_count %></strong></h3>
  <h3>Floor Area:<strong> <%= @library.floor_area %></strong></h3>
</div>
<br>
<h4> Books in this Library: </h4>
<% @books.each do |book| %>
<br>
Title: <strong><%= book.title %></strong>
<br>
Author:<strong> <%= book.author %></strong>
<br>
Release Date:<strong> <%= book.releasedate %></strong>
<br>
<%= button_to "Delete Book", [@library,book], method: :delete, class: "btn btn-small btn-success" %>
<%= link_to "Edit Book", edit_book_path(@library,book), :class=>"btn btn-small btn-warning" %>
<% end %>
<br>
<%= link_to "Create Book", new_book_path(@library) %>
<br>
<%= link_to "Library Index", libraries_path %>
<br>
<%= link_to "Edit this Library", library_edit_path(@library) %>
<%= button_to "Delete Library", @library, method: :delete, class: "btn btn-small btn-success" %>
